<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_15ssp">

        <TextView
            android:id="@+id/quarantine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:padding="10sp"
            android:gravity="center_horizontal"
            android:text="Please Fill The Details"
            android:textSize="30sp" />

        <!--    <LinearLayout-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_below="@+id/quarantine"-->
        <!--        android:id="@+id/lay1"-->
        <!--        >-->
        <!--        <TextView-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"-->
        <!--            android:text="Quarantine reason"-->
        <!--            />-->
        <!--        <Spinner-->
        <!--            android:layout_width="0dp"-->
        <!--            android:id="@+id/reason_quarantine"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"/>-->


        <!--    </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/quarantine"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10sp"
            android:orientation="horizontal"
            android:id="@+id/layout11">
            <TextView
                android:id="@+id/Symptoms"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptoms"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp" />



            <RadioGroup
                android:id="@+id/rgGroup"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_below="@+id/quarantine"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="YES"
                    android:backgroundTint="@android:color/black"
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/rbNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="@android:color/black"
                    android:text="NO"
                    android:textSize="17sp" />
            </RadioGroup>



        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/layout11"
            android:visibility="gone"
            tools:itemCount="10" />

        <!--<Spinner
            android:id="@+id/symptons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>-->
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
              android:id="@+id/layout22"
              android:padding="10sp"
              android:layout_below="@+id/rcView">


              <TextView
                  android:id="@+id/tvTemp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/rcView"
                  android:text="Temperature"
                  android:textSize="20sp"
                  android:textColor="@color/black"
                  android:textStyle="bold" />

              <EditText
                  android:id="@+id/temp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="40sp"
                  android:padding="5sp"
                  android:layout_toEndOf="@+id/tvTemp"
                  android:hint="Â°F"
                  android:inputType="number"
                  android:maxLength="5"/>
           </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout22"
            android:orientation="horizontal"
            android:padding="10sp"
            android:id="@+id/layout33">
            <TextView
                android:id="@+id/lay4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTemp"
                android:layout_marginTop="10dp"
                android:text="Blood Pressure"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/bp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTemp"
                android:layout_marginStart="23dp"
                android:padding="5sp"
                android:layout_marginTop="13dp"
                android:layout_toEndOf="@+id/lay4"
                android:ellipsize="end"
                android:maxLength="5"
                android:hint="Write Here......."
                android:inputType="number"
                android:maxLines="1"
                android:textColorHint="@android:color/darker_gray" />

        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20sp"
    android:layout_below="@+id/layout33">
    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
       android:gravity="center_horizontal"
        android:layout_marginStart="100dp"
        android:background="@drawable/submitbg"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:padding="20dp"
        android:text="SUBMIT" />


</LinearLayout>



    </RelativeLayout>
    </ScrollView>

</FrameLayout>