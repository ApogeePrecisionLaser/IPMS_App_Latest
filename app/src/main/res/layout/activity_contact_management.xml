<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#47528F"
    tools:context=".Other.ContactManagement">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:id="@+id/detail"
        android:text="PERSON DETAILS"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/detail"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/detail"
        android:id="@+id/placemeet"
        android:background="@drawable/rounded_edttext"
        android:padding="20sp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="Place "
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contactplace"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/placemeet"
        android:background="@drawable/rounded_edttext"
        android:padding="5sp"
        android:layout_marginTop="10dp"
        android:id="@+id/moblileno"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_phone_black_24dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Mobile Number"
            android:inputType="number"
            android:id="@+id/mobbile"
            android:maxLength="10"
            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/moblileno"
        android:background="@drawable/rounded_edttext"
        android:padding="5sp"
        android:layout_marginTop="10dp"
        android:id="@+id/namelayout"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_person_black_24dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:id="@+id/personname"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/namelayout"
        android:background="@drawable/rounded_edttext"
        android:padding="5sp"
        android:layout_marginTop="10dp"
        android:id="@+id/datetimes"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/date"
            android:src="@drawable/date"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Click Calender Icon"
            android:id="@+id/dateedittext"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/datetimes"
        android:background="@drawable/rounded_edttext"
        android:padding="5sp"
        android:layout_marginTop="10dp"
    android:id="@+id/lay3"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/timing"
        android:src="@drawable/ic_access_time_black_24dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeedittext"
        android:hint="Click Clock Icon"
        android:inputType="number"/>



</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/lay3"
        android:padding="20sp"
        android:id="@+id/time"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:padding="5dp"
            android:id="@+id/Submit"
            android:text="Submit"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_btn"
            android:inputType="number"/>



    </LinearLayout>
    </LinearLayout>
   </RelativeLayout>