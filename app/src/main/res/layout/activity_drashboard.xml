<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <LinearLayout
        android:id="@+id/llDeviceRegister"
        android:layout_width="match_parent"
        android:layout_below="@+id/tool"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            app:contentPadding="10dp">
            <RelativeLayout
                android:id="@+id/re_epass"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/circle"
                android:gravity="center">

                <TextView
                    android:id="@+id/epass"
                    style="@style/Base.CardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="E-PASS"
                    android:textSize="@dimen/_15ssp" />
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/epass"
                    android:src="@drawable/card" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            app:contentPadding="10dp">
            <RelativeLayout
                android:id="@+id/re_quarantine"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/circle"
                android:gravity="center">
                <TextView
                    android:id="@+id/quarantine"
                    style="@style/Base.CardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="QUARATINE"
                    android:textSize="@dimen/_15ssp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/quarantine"
                    android:src="@drawable/card" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2DeviceRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/llDeviceRegister"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            app:contentPadding="10dp">
            <RelativeLayout
                android:id="@+id/re_document"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/circle"
                android:gravity="center">
                <TextView
                    android:id="@+id/document"
                    style="@style/Base.CardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="DOCUMENT"
                    android:textSize="@dimen/_15ssp" />
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/document"
                    android:src="@drawable/document" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            app:contentPadding="10dp">
            <RelativeLayout
                android:id="@+id/re_contact"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/circle"
                android:gravity="center">

                <TextView
                    android:id="@+id/contact"
                    style="@style/Base.CardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="CONTACT MANAGEMENT"
                    android:textSize="@dimen/_15ssp" />
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="50dp"
                    android:layout_below="@id/contact"
                    android:src="@drawable/card" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/l2DeviceRegister"
        android:weightSum="2">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:contentPadding="10dp">
        <RelativeLayout
            android:id="@+id/re_faq"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:background="@drawable/circle"
            android:gravity="center">
            <TextView
                android:id="@+id/faq1"
                style="@style/Base.CardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
               android:gravity="center"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                android:text="FAQ"
                android:textSize="@dimen/_15ssp" />
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/faq1"
                android:src="@drawable/document" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>